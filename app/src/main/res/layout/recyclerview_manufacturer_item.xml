<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
            android:id="@+id/manufacturerName"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:textSize="28sp"
            android:layout_height="wrap_content"
            android:background="#ffffffff"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"/>
    <ImageView
            android:id="@+id/dropdown_icon_manufacturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_dropdown_open"
            android:contentDescription="@string/dropdown_open"
            app:layout_constraintTop_toTopOf="@+id/manufacturerName"
            app:layout_constraintBottom_toBottomOf="@+id/manufacturerName"
            app:layout_constraintEnd_toEndOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>